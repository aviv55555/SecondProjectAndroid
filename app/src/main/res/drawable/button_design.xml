<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Background (from light purple to dark purple) -->
    <gradient
        android:startColor="#DAB5F6"
        android:endColor="#6A0DAD"
        android:angle="45"/>

    <!-- Rounded Corners -->
    <corners android:radius="50dp"/>
    <stroke
        android:color="#4B0082" android:width="2dp"/>
    <!-- Optional: Adding shadow/elevation -->
    <padding android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp"/>
</shape>
